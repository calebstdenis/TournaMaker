<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.cstde037.tournamaker.ProfileActivity"
    android:onClick="SetTeamIcon">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="LOAD IMAGE"
            android:id="@+id/textView6"
            android:layout_gravity="center_horizontal" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"></LinearLayout>

        <GridLayout
            android:layout_width="240dp"
            android:layout_height="180dp"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/team00"
                android:layout_row="0"
                android:layout_column="0"
                android:background="@drawable/argentina"
                android:onClick="SetTeamIcon" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/team01"
                android:layout_row="0"
                android:layout_column="1"
                android:background="@drawable/brazil"
                android:onClick="SetTeamIcon" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/team02"
                android:layout_row="0"
                android:layout_column="2"
                android:background="@drawable/colombia"
                android:onClick="SetTeamIcon" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/team03"
                android:layout_row="0"
                android:layout_column="3"
                android:background="@drawable/france"
                android:onClick="SetTeamIcon" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/team04"
                android:layout_row="1"
                android:layout_column="0"
                android:background="@drawable/germany"
                android:onClick="SetTeamIcon" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/team05"
                android:layout_row="1"
                android:layout_column="1"
                android:background="@drawable/greece"
                android:onClick="SetTeamIcon" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/team06"
                android:layout_row="1"
                android:layout_column="2"
                android:background="@drawable/mexico"
                android:onClick="SetTeamIcon" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/team07"
                android:layout_row="1"
                android:layout_column="3"
                android:background="@drawable/netherlands"
                android:onClick="SetTeamIcon" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/team08"
                android:layout_row="2"
                android:layout_column="0"
                android:background="@drawable/south_africa"
                android:onClick="SetTeamIcon" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/team09"
                android:layout_row="2"
                android:layout_column="1"
                android:background="@drawable/uruguay"
                android:onClick="SetTeamIcon" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/team10"
                android:layout_row="2"
                android:layout_column="2"
                android:background="@drawable/ic_logo_10"
                android:onClick="SetTeamIcon" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/targetimage"
                android:layout_row="2"
                android:layout_column="3"
                android:onClick="SetTeamIcon" />
        </GridLayout>

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/targeturi"
            android:layout_gravity="center_horizontal" />

        <Space
            android:layout_width="fill_parent"
            android:layout_height="50dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload from phone"
            android:id="@+id/buttonLoadImage"
            android:layout_gravity="center_horizontal"
            android:onClick="OnSetAvatarButton" />

    </LinearLayout>

</RelativeLayout>
