<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:theme="@android:style/Theme.Holo"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:paddingTop="10dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:paddingEnd="10dp"
            android:paddingStart="10dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/awayTeamLogo"
                android:src="@drawable/colombia"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/awayTeamShortName"
                android:layout_columnWeight="1"
                android:layout_gravity="center"
                android:textIsSelectable="true"
                android:text="COL"
                android:textColor="#000000" />

        </LinearLayout>

        <NumberPicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/awayNumberPicker"
            android:layout_weight="1"
            android:background="#7a3333" />

        <Space
            android:layout_width="20px"
            android:layout_height="20px"
            android:layout_weight="2"
            android:clickable="true"
            android:scrollIndicators="top|bottom" />

        <NumberPicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#7a3333"
            android:id="@+id/homeNumberPicker" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:paddingEnd="10dp"
            android:paddingStart="10dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/homeTeamLogo"
                android:src="@drawable/brazil"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/homeTeamShortName"
                android:layout_columnWeight="1"
                android:layout_gravity="center"
                android:textIsSelectable="true"
                android:text="BRA"
                android:textColor="#000000" />
        </LinearLayout>
    </LinearLayout>

    <Space
        android:layout_width="20px"
        android:layout_height="50px" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

    </LinearLayout>

</LinearLayout>